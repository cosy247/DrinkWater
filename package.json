{
    "name": "drink_water",
    "main": "main.js",
    "version": "0.0.1",
    "author": "Cosy247",
    "description": "Cosy247",
    "scripts": {
        "dev": "electron .",
        "build": "electron-builder build"
    },
    "devDependencies": {
        "electron": "^23.1.1",
        "electron-builder": "^23.6.0"
    },
    "build": {
        "productName": "DrinkWater",
        "appId": "com.Cosy247.DrinkWater",
        "copyright": "https://github.com/cosy247",
        "directories": {
            "output": "build"
        },
        "win": {
            "icon": "./icons/icon256.ico",
            "target": [
                {
                    "target": "nsis"
                }
            ]
        },
        "mac": {
            "icon": "build/icons/icon.icns"
        },
        "linux": {
            "icon": "build/icons"
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "./icons/icon256.ico",
            "uninstallerIcon": "./icons/icon256.ico",
            "installerHeaderIcon": "./icons/icon256.ico",
            "createDesktopShortcut": false,
            "createStartMenuShortcut": false,
            "shortcutName": "DrinkWater"
        }
    }
}
